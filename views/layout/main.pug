//- main.pug
doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    // title
    if page.title
      title= "hack-it-up.ru — " + page.title 
    else
      title "hack-it-up.ru — unknown page"
    if page.description
      meta(name='description' content=page.description)
    if page.keywords
      meta(name='keywords' content=page.keywords)

    link(rel='shortcut icon' href='/favicon.png')
    link(rel='stylesheet' href='/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/styles.css')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    .container
      header
        div
          if page.image
            img.logo(src='/images/{{page.image}}' alt='{{page.title || "hack-it-up"}}')
          else
            img.logo(src='/images/c/no-image.jpg' alt='hack-it-up')
        h1= page.h1 || "Happy Hacking *_*"
      #content
        .row
          main.col-xs-12.col-sm-9
            block content
    footer
      .container
        .row
          .col-xs-12
            | Copyright © 2017-20** , 
            a(href='https://t.me/PinkyaRabbit' target='_blanc')
              | Mikita Melnikau
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='/js/jquery-1.12.4.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='/js/bootstrap.min.js')
